.profiles .white-bg {
  background: none;
  padding-top: 5em;
}

.profiles .photo {
  height: 250px;
  width: 250px;
  border: 2px solid black;
  margin-right: 5%;
  overflow: hidden;
  -webkit-transition: 1s;
  -moz-transition: 1s;
  -ms-transition: 1s;
  -o-transition: 1s;
  transition: 1s;
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  /* workaround firefox */
  filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale"); /* Firefox 3.5+ */
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
}

.profiles .photo:hover{
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);
  filter: grayscale(00%);
}

.profiles h1 {
  line-height: 1;
  margin: 25px 0 40px;
}

.profiles h5 {
  font-size: 1.3em;
  padding: 0;
  margin-bottom: 0.5em;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  line-height: 1;
}

 span {
  font-weight: 100;
  font-size: 1.1em;
  font-family: 'Merriweather',Georgia;
  color: #5e5e5e;
}

.info-profiles-bio {
  padding: 2em 0 3em;
  line-height: 1.3em;
  margin-top: 2em;
  overflow: auto;
}
.info-profiles-bio > div {
  margin: 0;
}

.info-profiles-bio p {
  font-family: 'Merriweather',Georgia,serif;
  font-size: 1em;
}
.info-profiles-text {
  padding-right: 2.5em;
}
.info-profiles-media iframe {
  width: 100%;
}

.buttons-modals {
  width: 100%;
  margin-bottom: 0.5em;
}
.profile-delete-pic {
  margin: 0 0 2em 13em;
}

#contact {
  display: none;
}

/*classes for topicscloud*/
.s {
  font-size: 12px;
}

.m {
  font-size: 16px;
}

.l {
  font-size: 18px;
}

#topics-cloud {
  min-height: 1000px;
}

#topics-cloud a{
  background-color: #fff;
  padding: 0px 4px;
}

#topics-cloud a:hover {
  -webkit-transition: all .2s ease-in-out;
  -moz-transition: all .2s ease-in-out;
  -o-transition: all .2s ease-in-out;
  background-color: whitesmoke;
  padding: 0px 8px;
  font-size: 1.5em;
  }

#topics-cloud .topic-filter {
  float: right;
}

#topics-cloud #quick-filter {
  height: 32px;
  width: 160px;
}

