.profiles .white-bg {
  background: none;
  padding-top: 5em;
}

.profiles .photo {
  height: 250px;
  width: 250px;
  border: 2px solid black;
  margin-right: 5%;
  overflow: hidden;
  -webkit-transition: 1s;
  -moz-transition: 1s;
  -ms-transition: 1s;
  -o-transition: 1s;
  transition: 1s;
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -ms-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
}

.profiles .photo:hover{
  -webkit-filter: grayscale(0%);
  -moz-filter: grayscale(0%);
  -ms-filter: grayscale(0%);
  -o-filter: grayscale(0%);
  filter: grayscale(00%);
}

.profiles h1 {
  line-height: 1;
  margin: 25px 0 40px;
}

.profiles h5 {
  font-size: 1.3em;
  padding: 0;
  margin-bottom: 0.5em;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  line-height: 1;
}

 span {
  font-weight: 100;
  font-size: 1.1em;
  font-family: 'Merriweather',Georgia;
  color: #5e5e5e;
}

.info-profiles-bio {
  padding: 2em 0 3em;
  line-height: 1.3em;
  margin-top: 2em;
  overflow: auto;
}
.info-profiles-bio > div {
  margin: 0;
}

.info-profiles-bio p {
  font-family: 'Merriweather',Georgia,serif;
  font-size: 1em;
}
.info-profiles-text {
  padding-right: 2.5em;
}
.info-profiles-media iframe {
  width: 100%;
}

.buttons-modals {
  width: 100%;
  margin-bottom: 0.5em;
}
.profile-delete-pic {
  margin: 0 0 2em 13em;
}

#contact {
  display: none;
}
