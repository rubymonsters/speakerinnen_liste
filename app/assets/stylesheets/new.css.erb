.well {
  border: none;
  padding-top: 40px;
  background-color: whitesmoke;
}

.well .control-group-one {
  margin-left: -40px;
}

.well .controls {
  margin-left: 180px;
}

.well legend {
  padding: 40px 0;
  display: block;
  font-size: 4.0em;
  -webkit-margin-before: 0.67em;
  -webkit-margin-after: 0.67em;
  -webkit-margin-start: 0px;
  -webkit-margin-end: 0px;
  font-family: 'Merriweather',Georgia,serif;
  line-height: 1.8em;
}

.well input[type="text"], .well .input-xlarge, ul.tagit {
  height: 43px;
  padding: 0 14px;
  width: 250px;
  margin: 0;
}

ul.tagit {
  height: 86px;
}

.well .input-xlarge  {
  height: 160px;
}

.well input[type="email"], .well input[type="password"] {
  width: 250px;
  height: 43px;
  padding: 0 12px;
  font-size: 16px;
}

.well input[type="submit"].btn {
	width: 55%;
	height: 43px;
  margin-left: 39%;
  color: #fff;
}

.well .form-actions {
  margin: 30px;
  padding: 0;
}

.forget-password {
	font-size: 0.8em;
	text-align: center;
  padding: 2em;
}
