<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put,:class => "form-horizontal well" }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend><%= t ".account_from" %> <%= @profile.firstname %></legend>
    <div class="control-group">
      <%= f.label :email, class:"control-label" %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true, class:"input-xlarge", id:"input01"%>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t ".confirmation" %><%= resource.unconfirmed_email %></div>
    <% end %>

    <% if f.object.encrypted_password.present? %>
      <div class="controll-group">
        <%= f.label :old_password, class:"control-label" %> 
        <div class="controls">
          <%= f.password_field :current_password, class:"input-xlarge", id:"input01" %>
          <p class="help-block"><%= t ".password_needed" %></p>
          <br>
        </div>
      </div>

      <div class="controll-group">
        <%= f.label :new_password, class:"control-label" %>
        <div class="controls">
          <%= f.password_field :password, :autocomplete => "off", class:"input-xlarge", id:"input01" %>
          <p class="help-block"><%= t ".password_blank" %></p>
          <br/>
        </div>
      </div>

      <div class="controll-group">
        <%= f.label :password_confirmation, class:"control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation, class:"input-xlarge", id:"input01" %>
        </div>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit(t(".update"), class:"btn btn-danger") %>
    </div>
<% end %>

<h3><%= t ".delete_account" %></h3>
  <div class="form-actions">
    <p><%= t ".unhappy" %><%= button_to(t(".delete"), registration_path(resource_name), :data => { :confirm => t(".sure") }, :method => :delete, class:"btn btn-primary") %>.</p>
  </div>
</fieldset>
</form>
