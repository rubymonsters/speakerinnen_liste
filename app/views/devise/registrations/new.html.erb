<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal well"}) do |f| %>
  
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</p>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Sign up</legend>

    <div class="control-group">
    <%= f.label :firstname, class:"control-label"%>
    <div class="controls">
      <%= f.text_field :firstname, class:"input-xlarge", id:"input01"%>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :lastname, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :lastname, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :bio, class:"control-label" %>
    <div class="controls">
      <%= f.text_area :bio, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :topic_list, "Tags (mit Kommata getrennt)",  class:"control-label" %>
    <div class="controls">
      <%= f.text_field :topic_list, class:"input-xlarge", id:"input01" %>
    </div>
  </div> 

  <div class="control-group">
    <%= f.label :talks, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :talks, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :languages, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :languages, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :city, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :city, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :twitter, class:"control-label" %>
    <div class="controls">
      <%= f.text_field :twitter, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :picture, class:"control-label" %>
    <div class="controls">
      <%= f.file_field :picture, class:"input-xlarge", id:"input01" %>
    </div>
  </div>
  <hr>
  <div class="control-group">
    <%= f.label :email, class:"control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, class:"input-xlarge", id:"input01"%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, class:"control-label" %>
    <div class="controls">
      <%= f.password_field :password, class:"input-xlarge", id:"input01" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class:"control-label" %>
    <div class="controls">
      <%= f.password_field :password_confirmation, class:"input-xlarge", id:"input01" %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit "Sign up", class:"btn btn-primary"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  </fieldset>
</form>
