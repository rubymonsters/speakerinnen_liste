<div class="container">
  <div id="badge-log">
    <div id="badge-inner">

      <div id="logo">
        <%= image_tag("logo8.png", id:"logo8") %>
      </div>

      <div id="login">
        <h4>Forgot your password?</h4>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form', method: :post }) do |f| %>
          <%#= devise_error_messages! %>

            <%= f.email_field :email, autofocus: true %> 
          <%= f.submit "Send me reset password instructions", class:'btn' %>

        <% end %>

        <%#= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
