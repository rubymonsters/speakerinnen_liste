<% if profile %>
  <div class="col-sm-6 col-md-4 col-lg-3 my-3 profile-box">
    <% if profile.image.attached? %>
      <p>
        <%= image_tag profile.image %>
      </p>
    <% else %>
      <%= profile_picture_link(profile) %>
    <% end %>
      <div>
        <%= link_to profile.fullname, profile %>
      </div>
      <div class="profile-subtitle">
        <%= profile.main_topic_or_first_topic.truncate(60) if profile.main_topic_or_first_topic %>
      </div>
  </div>
<% end %>
