<div class="row mt-3">
  <div class="col-sm-12 col-md-8 col-lg-6 p-3">
    <h5 class="pb-3 font-weight-bold"> <%= t(:services_i_give, scope: 'profiles.form').html_safe %></h5>
    <div class="form-group">
      <% Service.all.each do |service| %>
        <label name="service-<%= service.id %>">
