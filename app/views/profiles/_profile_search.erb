<div class="box__bg bg--white profile-box text-left">

  <div class="row">
    <div class="col-sm-12 col-md-4">
    </div>
    <div class="col-sm-12 col-md-8">
      <h2><%= link_to profile.fullname, profile %></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <%= profile_picture_link(profile) %>
      <p><%= profile.main_topic_or_first_topic if profile.main_topic_or_first_topic %></p>
    </div>

    <div class="col-sm-12 col-md-8">
     <% if profile.twitter.present? %>
         <h5><%= t(:twitter, scope: 'profiles.profile') %></h5>
         <p class="pb-2">
           <%=link_to '@' + profile.twitter_name_formatted, profile.twitter_link_formatted,
           target: '_blank' %>
         </p>
     <% end %>

     <% if profile.website.present? %>
       <h5> <%= t(:website, scope: 'profiles.profile') %> </h5>
       <p class="pb-2">
         <%= link_to profile.website, profile.website_with_protocol(profile.website),
         target: '_blank' %>
       </p>
     <% end %>

     <h5><%= t(:topics, scope: 'profiles.profile') %></h5>
     <p class="pb-2 topics-profile">
       <%= raw topics(profile).map { |topic| topic_link(topic) }.join(' ') %>
     </p>

     <% if profile.iso_languages.present? %>
       <h2 class="delta sans-serif mb-">
         <%= t(:languages, scope: 'profiles.profile') %>
       </h2>
       <p class="pb">
          <% profile.iso_languages.each do |iso|%>
            <%= t("#{iso}", scope: 'iso_639_1').capitalize %>
          <% end %>
       </p>
     <% end %>
    </div>

  </div>
</div>
