<div style="padding: 60px 30px;">
  <h2 class="form-title"><%= t(:contact, scope: 'pages.home.footer') %></h2>
  <%= form_for @message, url: url, html: {id: "no_id"} do |f| %>
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, placeholder: t(".name_placeholder"), style: "width: 100%; height: 40px" %>

    <%= f.label :email, t(".email"), id: 'message_email' %>
    <%= f.text_field :email %>

    <%= f.label HONEYPOT_EMAIL_ATTR_NAME, t(".email") %>
    <%= f.text_field HONEYPOT_EMAIL_ATTR_NAME,  style: "width: 100%; height: 40px" %>

    <%= f.label :subject, t(".subject") %>
    <%= f.text_field :subject,  style: "width: 100%; height: 40px" %>

    <%= f.label :body, t(".body") %>
    <%= f.text_area :body, style: "width: 100%; height: 100px" , placeholder: t(".body_placeholder") %>
    <br>
    <br>
    <%= f.submit t(".send"), class:"btn  btn-large"%>
  <% end %>
</div>
