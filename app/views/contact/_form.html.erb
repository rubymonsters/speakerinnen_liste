

<%= form_for @message, :url => url do |f| %>
  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, placeholder: t(".name_placeholder"), :style => "width: 100%; height: 40px" %>

  <%= f.label :email, t(".email") %>
  <%= f.text_field :email,  :style => "width: 100%; height: 40px" %>

  <%= f.label :subject, t(".subject") %>
  <%= f.text_field :subject,  :style => "width: 100%; height: 40px" %>

  <%= f.label :body, t(".body") %>
  <%= f.text_area :body, :style => "width: 100%; height: 100px" , :placeholder => t(".body_placeholder") %>
</br>
  <%= f.submit class:"btn  btn-large"%>
<% end %>