<section id="about-top">

  <div class="badge"><%= image_tag("badge2-bw.png", :alt => "badge") %> </div>
  <script>
    $(window).scroll(function() {
       if ($(this).scrollTop() > 100) {
         $(".badge").stop().animate({ opacity: 0 }, 50);
       } else {
         $(".badge").stop().animate({ opacity: 1 }, 50);
       }
       //stops badge from covering other links
       if ($(this).scrollTop() > 700) {
         $(".badge").hide();
       } else {
         $(".badge").show();
       }
    });
  </script>

  <div class="container">
    <div class="heading">
      <div class="large serif">
        <span class="text-white-bg"><%= t(:heading, scope: "dashboard.index.search") %></span>
        <br/>
        <span class="text-white-bg tagline-second"><%= t(:tagline, scope: "dashboard.index.search") %></span>
        <br/>
        <div id="search-bar" class="white-search">
          <%= form_tag(search_path, :method => "get", :class =>"") do %>
            <%= text_field_tag(:q, nil, :class => "", :id => "search-field", :placeholder => t(:search_text, scope: "dashboard.index.search")) %>
          <%= button_tag((t(:search, scope: "dashboard.index.search")), :class => "btn btn-large ") %>
        </div>
      <% end %>
      </div>
    </div>
</section>

