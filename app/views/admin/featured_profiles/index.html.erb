<div class="m-5">
  <h1 class="text-center mt-5 pt-5">Administration::<%= t(:featured_profiles, scope: 'admin.dashboard.featured_profiles')%></h1>

  <%= link_to ('<i class="fa fa-plus-circle">&nbsp;</i>' + t(:add, scope: "general")).html_safe,
  new_admin_featured_profile_path, class: "btn btn-blue btn-sm my-5" %>

  <table class="table">
    <thead class="bg--lightgrey">
      <tr>
        <th>Titel</th>
        <th>Beschreibung</th>
        <th>Profile Ids</th>
        <th>öffentlich</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @featured_profiles.each do |featured_profile|  %>
        <tr>
          <td><%= featured_profile.title %></td>
          <td><%= featured_profile.description[0..99] %></td>
          <td><%= featured_profile.profile_ids %></td>
          <td>
            <% if featured_profile.public %>
              <%= link_to t(:public, scope: 'admin.dashboard.featured_profiles'), stop_event_admin_featured_profile_path(featured_profile.id),
                method: :post, class:'btn btn-blue btn-block btn-sm' %>
              <% else %>

                <%= link_to t(:invisible, scope: 'admin.dashboard.featured_profiles'), announce_event_admin_featured_profile_path(featured_profile.id),
                method: :post, class:'btn btn-sm btn-block btn-light', title: 'Diese Featured Profiles auf der Homepage ankündigen.' %>
              <% end %>
          </td>
          <td>
            <%= link_to ('<i class="fa fa-pencil">&nbsp;</i>' + t(:edit, scope: "general")).html_safe,
                edit_admin_featured_profile_path(featured_profile.id) %>
          </td>
          <td>
            <%= link_to ('<i class="fa fa-trash-o">&nbsp;</i>' + t(:delete, scope: "general")).html_safe,
              admin_featured_profile_path(featured_profile.id), method: :delete,
              confirm: "Do you want to delete the Featured Profiles entitled #{featured_profile.title}?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
