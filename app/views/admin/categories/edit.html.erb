<div class="container profiles add-category">
    <h1 class="title-profiles">Administration::<%= t(:categories, scope: "admin.dashboard.categories")%>::<%= t(:edit, scope: "general")%></h1>
  <div class="add-category-form">
    <%= form_for [:admin, @category], html: {class: 'form-horizontal'} do |f| %>
        <div class="row">
            <%= f.label 'current_name', t(:current_name, scope: "general"), class:"control-label" %>
            <%= @category.name %>
          </div>
          <div class="row">
            <%= f.label 'new_name', t(:new_name, scope: "general"), class:"control-label" %>
            <%= f.text_field :name %>
          </div>
        <div class="row">
          <%= f.submit t(:ok, scope: "general"), class:"btn btn-info span5" %>
        </div>
    <% end %>
</div>
