<section class="content--bg-white">
  <div class="layout-wrapper">
    <%= render 'shared/error_messages' %>

    <h1>Administration::<%= t(:profiles, scope: "admin.dashboard.profiles")%>::<%= t(:edit, scope: "general")%></h1>

    <%= link_to(t(:show, scope: "admin.dashboard.profiles.edit"), admin_profile_path(@profile), class:"btn btn--small") %>
    <%= link_to(t(:show_all, scope: "admin.dashboard.profiles.edit"), admin_profiles_path, class:"btn btn--small") %><br>
    <% if @profile.published %>
      <%= link_to(t(:public, scope: "admin.dashboard.profiles"), unpublish_admin_profile_path(@profile.id), method: :post, class:"btn btn--small btn--danger mv", title: "Hier kannst Du das Profile wieder nicht sichtbar machen.") %>
    <% else %>
      <%= link_to(t(:invisible, scope: "admin.dashboard.profiles"), publish_admin_profile_path(@profile.id), method: :post, class:"btn btn--small btn--danger mv", title: "Eine BestÃ¤tigungsmail wird verschickt.") %>
    <% end %>

    <%= simple_form_for @profile, url: admin_profile_path(@profile),
                           html: { multipart: true, class: ""} do |f| %>

      <%= render partial: "shared/profile_formfields",
                   locals: { form_type: :update_profile, f: f, profile: @profile } %>
    <% end %>
  </div>
</section>
