<section id="startpage__start-teaser" class="startpage__photo-bar">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:heading, scope: 'pages.home.search') %></h1>
    <h1 class="alpha--halve box__bg bg--white"><%= t(:tagline_html, scope: 'pages.home.search', root_path: root_path) %></h1>

    <%= form_tag(profiles_path, method: 'get', class: 'page-box') do %>
      <div class="box__bg--light pv ph- border-radius">
        <%= render partial: 'shared/search' %>
      </div>
    <% end %>
  </div>
</section>

<section class="layout-wrapper">
  <h1 class="box__bg bg--white"><%= t(:new_speaker_heading, scope: 'pages.home.speakers') %></h1>
  <h1 class="alpha--halve bv ph0 display--block box__bg bg--white">
    <%= t(:speaker_text, scope: 'pages.home.speakers') %><BR>
    <%= link_to t(:speaker_index, scope: 'pages.home.speakers'), profiles_path %>
  </h1>
  <div id="profiles-selection" class="o-layout">
    <% if @profiles.any? %>
        <%= render partial: "profiles/profile", object: @profiles[0], locals: { is_first: true } %>
        <%= render partial: "profiles/profile", collection: @profiles[1..-2] %>
        <%= render partial: "profiles/profile", object: @profiles[-1], locals: { is_last: true } %>
    <% end %>
  </div>
</section>

<section id="startpage__teaser-bg-01" class="startpage__photo-bar mt++">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:quote, scope: 'pages.home') %></h1>
    <h1 class="alpha--halve box__bg bg--white"><%= t(:quote_text, scope: 'pages.home') %></h1>
  </div>
</section>

<!-- Anker fÃ¼r Kategorien -->
<a id="categories_anchor"></a>

<section class="layout-wrapper">
  <h1 class="box__bg bg--white"><%= t(:description, scope: 'pages.home') %></h1>
  <h1 class="alpha--halve bv ph0 display--block box__bg bg--white">
    <%= t(:description_text, scope: 'pages.home') %>
  </h1>
  <div id="categories-selection" class="o-layout">
    <%= render partial: "shared/categories", object: @categories %>
  </div>
</section>

<section id="startpage__teaser-bg-02" class="startpage__photo-bar mt++">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:speaker_shoutout, scope: 'pages.home').html_safe %></h1>
    <h1 class="alpha--halve box__bg bg--white"><%=link_to t(:speaker_text, scope: 'pages.home').html_safe, new_profile_registration_path %></h1>
  </div>
</section>

<section class="layout-wrapper">
  <h1 class="display--block box__bg bg--white">Speakerinnen*</h1>
  <div class="o-layout">
    <div class="o-layout__item 1/3 palm-1/1">
      <h1 class="alpha--halve bv ph0 display--block">
        <%= link_to t(:about_title, scope: 'pages.home.footer'), about_path %>
      </h1>
      <p>
        <%= t(:about, scope: 'pages.home.footer').html_safe %>
        <%= link_to t(:more, scope: 'pages.home.footer').html_safe, about_path  %>
      </p>
    </div>
    <div class="o-layout__item 1/3 palm-1/1">
      <h1 class="alpha--halve bv ph0 display--block">
        <%= link_to t(:press, scope: 'pages.home.footer'), press_path %>
      </h1>
      <p>
        <%= t(:press_short, scope: 'pages.home.footer').html_safe %>
        <%= link_to t(:more, scope: 'pages.home.footer').html_safe, press_path  %>
      </p>
    </div>
    <div class="o-layout__item 1/3 palm-1/1">
      <h1 class="alpha--halve bv ph0 display--block">
        <%= link_to t(:blog, scope:"pages.home.footer"), 'http://blog.speakerinnen.org/', target: '_blank' %>
      </h1>
      <p>
        <% @blog_posts.each do |blogpost| %>
          <strong><%= blogpost.title %></strong><br>
          <%= strip_tags(blogpost.body).truncate(150, separator: ' ') %>
          <%= link_to t(:more, scope: 'pages.home.footer').html_safe, blogpost.url, target: '_blank' %>
          <br>
          <br>
        <% end %>
      </p>
    </div>
  </div>
</section>
