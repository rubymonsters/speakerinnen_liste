<section id="startpage__start-teaser" class="startpage__photo-bar">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:heading, scope: 'pages.home.search') %></h1>
    <h4 class="box__bg bg--white"><%= t(:tagline_html, scope: 'pages.home.search', root_path: root_path) %></h4>

    <%= form_tag(profiles_path, method: 'get', class: 'page-box') do %>
      <div class="box__bg--light p-3">
        <%= render partial: 'shared/search_form' %>
        <p>
          <%= link_to(t(:all_categories, scope: 'pages.home'), root_path + "#categories_anchor" )%><br>
          <%= link_to(t(:all_profiles, scope: 'search'), profiles_path ) %>
        </p>
      </div>
    <% end %>
  </div>
</section>
<!-- <div class="copyright">
   Copyright: public domain ( modified )
</div> -->

<section class="layout-wrapper">
  <h1 class="box__bg mb-0"><%= t(:speaker_headline, scope: 'pages.home.speakers') %></h4>
  <h4 class="border-vertical d-block box__bg bg--white mb-4">
    <%= t(:speaker_text, scope: 'pages.home.speakers') %><BR>
    <%= link_to t(:speaker_index, scope: 'pages.home.speakers'), profiles_path %>
  </h1>
  <div class="container">
    <div class="row">
      <% if @profiles.any? %>
          <%= render partial: "profiles/profile", collection: @profiles %>
      <% end %>
    </div>
  </div>
</section>

<section id="startpage__teaser-bg-01" class="startpage__photo-bar">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:quote, scope: 'pages.home') %></h1>
    <h4 class="box__bg bg--white"><%= t(:quote_text, scope: 'pages.home') %></h4>
  </div>
</section>
