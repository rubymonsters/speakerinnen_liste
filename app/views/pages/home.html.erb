<section class="layout-wrapper">
  <h1 class="box__bg mb-0"><%= t(:description, scope: 'pages.home') %></h1>
  <h4 class="border-vertical d-block box__bg bg--white mb-4">
    <%= t(:description_text, scope: 'pages.home') %>
  </h4>
  <div class="container">
    <div class="row">
      <%= render partial: "shared/categories", object: @categories %>
    </div>
  </div>
</section>

<section id="startpage__teaser-bg-02" class="startpage__photo-bar">
  <div class="layout-wrapper">
    <h1 class="box__bg bg--white"><%= t(:speaker_shoutout, scope: 'pages.home').html_safe %></h1>
    <h4 class="box__bg bg--white"><%=link_to t(:speaker_text, scope: 'pages.home').html_safe, new_profile_registration_path %></h4>
  </div>
</section>
