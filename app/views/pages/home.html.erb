<section id="about-top">
  <div class="badge"><%= image_tag("badge2-bw.png", :alt => "badge") %> </div>
  <script>
    $(window).scroll(function() {
       if ($(this).scrollTop() > 100) {
         $(".badge").stop().animate({ opacity: 0 }, 50);
       } else {
         $(".badge").stop().animate({ opacity: 1 }, 50);
       }
       //stops badge from covering other links
       if ($(this).scrollTop() > 700) {
         $(".badge").hide();
       } else {
         $(".badge").show();
       }
    });
  </script>

  <div class="container">
    <div class="heading">
      <div class="large serif">
        <span class="text-white-bg"><%= t(:heading, scope: "pages.home.search") %></span>
        <br/>
        <span class="text-white-bg tagline-second"><%= t(:tagline, scope: "pages.home.search") %></span>
        <br/>
        <div class="text-white-bg tagline-second">
          <%= form_tag(search_path, :method => "get", :class =>"") do %>
            <%= text_field_tag(:q, nil, :class => "", :id => "search-field", :placeholder => t(:search_text, scope: "pages.home.search")) %>
            <%= button_tag((t(:search, scope: "pages.home.search")), :class => "btn btn-large ") %>
          <% end %>
          <br />
          <%= link_to t(:topics, scope: "pages.home.speakers"), "#topics"   %>
          <br />
          <%= link_to t(:speaker_index, scope: "pages.home.speakers"), profiles_path %>
          <br>
        </div>
      </div>
    </div>
  </div>
</section>

