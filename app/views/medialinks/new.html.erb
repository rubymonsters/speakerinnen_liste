<section class="content--bg-grey">
  <div class="layout-wrapper">

    <div class="layout">
      <div class="layout__item 2/3">

        <h1><%= t(:new, scope: "medialinks")%></h1>

      </div><!--
      --><div class="layout__item 1/3">

        <%= link_to(t(:home, scope: "profiles.edit"), profiles_path, class: 'content__link--bg') %>
        <%= link_to(t(:show, scope: "profiles.edit"), @profile, class: 'content__link--bg') %>

      </div>
    </div>

    <div class="layout">
      <div class="layout__item 3/3 bg--white">
        <%= simple_form_for [@profile, @medialink], html: {class: ''} do |f| %>

          <%= f.input :url, as: :string, input_html: { class: "mb input--width" }  %>
          <%= f.input :title, as: :string, input_html: { class: "mb input--width" }  %>
          <%= f.input :description, as: :text, input_html: { rows: 10, class: "mb input--width" }  %>

          <%= f.submit class:"btn btn--small" %>

        <% end %>
      </div>
    </div>
  </div>
</section>
